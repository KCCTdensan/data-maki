{
  "name": "data-maki",
  "private": true,
  "packageManager": "bun@1.1.20",
  "engines": {
    "node": ">=18"
  },
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "prepare": "run-p \"prepare:*\"",
    "prepare:git": "lefthook install",
    "prepare:typia": "ts-patch install && typia patch",
    "prepare:children": "turbo prepare",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "test": "turbo test"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/bun": "^1.1.10",
    "cross-env": "^7.0.3",
    "lefthook": "^1.7.18",
    "npm-run-all2": "^6.2.3",
    "ts-patch": "^3.2.1",
    "turbo": "^2.1.3",
    "type-fest": "^4.26.1",
    "typescript": "5.5.2",
    "typia": "^6.11.1"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@data-maki/frontend",
    "@data-maki/schemas",
    "esbuild",
    "lefthook",
    "workerd"
  ]
}
