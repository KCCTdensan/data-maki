{
  "name": "data-maki",
  "private": true,
  "scripts": {
    "prepare": "run-p \"prepare:*\"",
    "prepare:git": "lefthook install",
    "prepare:typia": "ts-patch install && typia patch",
    "prepare:children": "turbo prepare",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "test": "turbo test"
  },
  "dependencies": {
    "@types/bun": "^1.1.6",
    "lefthook": "^1.7.2",
    "npm-run-all": "^4.1.5",
    "ts-patch": "^3.2.1",
    "turbo": "^2.0.6",
    "typescript": "5.5.2",
    "typia": "^6.5.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.20",
  "workspaces": ["apps/*", "packages/*"]
}
